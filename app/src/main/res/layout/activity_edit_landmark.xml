<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.landmark.EditLandmarkActivity">

    <LinearLayout
        android:layout_width="278dp"
        android:layout_height="588dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/editLandmarkNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:text="Landmark Name" />

        <EditText
            android:id="@+id/editLandmarkBioText"
            android:layout_width="match_parent"
            android:layout_height="129dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:minHeight="48dp"
            android:text="Bio" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Population" />

        <EditText
            android:id="@+id/editLandmarkPopulationNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:minHeight="48dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/editLandmarkLocationName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location" />

        <Button
            android:id="@+id/editLandmarkSubmitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit This Landmark" />

        <Button
            android:id="@+id/editLandmarkDeleteButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#F44336"
            android:text="Delete Landmark" />

        <Button
            android:id="@+id/editLandmarkCancelButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>